<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/avnumlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.play.zv.seamountain.widget.CustomerTextView
            android:id="@+id/avnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ipz-952"
            android:includeFontPadding="false"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="60dp">-->

    <HorizontalScrollView
        android:id="@+id/av_star_scroll"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal">
        <!--去掉了android:layout_gravity="center_horizontal" scrollView拉动才正常 学到了！-->
        <LinearLayout
            android:id="@+id/starlayout"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <!--</android.support.v7.widget.CardView>-->
    <RelativeLayout
        android:id="@+id/avnameLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.play.zv.seamountain.widget.CustomerTextView
            android:id="@+id/avname"
            android:includeFontPadding="false"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:lines="3"
            android:text="ipz-952"
            android:textColor="#727272"
            android:textSize="15dp" />
    </RelativeLayout>

    <ProgressBar
        android:layout_margin="0dp"
        android:id="@+id/progess"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom" />
    <com.play.zv.seamountain.widget.MeasureGridView
        android:id="@+id/gridpreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:columnWidth="80dp"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/megnetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

    </LinearLayout>


</LinearLayout>